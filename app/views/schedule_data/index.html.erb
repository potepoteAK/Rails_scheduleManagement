<h3>予定一覧</h3>

<% if flash[:notice] %>
  <p class="notice"><%= flash[:notice] %></p>
<% end %>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>開始日</th>
      <th>終了日</th>
      <th>終日</th>
      <th>更新日時</th>
      <th>詳細</th>
      <th>編集</th>
      <th>削除</th>
    </tr>
  </thead>

  <tbody>
    <% @schedule_data.each do |schedule_datum| %>
      <tr>
        <td><%= schedule_datum.id %></td>
        <td><%= schedule_datum.title %></td>
        <td><%= schedule_datum.start_date.strftime("%F") %></td>
        <td><%= schedule_datum.end_date.strftime("%F") %></td>
        <td><%= schedule_datum.all_day_flg_converter(schedule_datum) %></td>
        <td><%= schedule_datum.updated_at.strftime("%F %R") %></td>
        <td>
          <%= link_to "詳細", schedule_datum %>
        </td>
        <td>
          <%= link_to "編集", [:edit, schedule_datum] %>
        </td>
        <td>
          <%= link_to "削除", schedule_datum, method: :delete, data: { confirm: "予定を削除しますか？" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<p>予定合計 <%= @schedule_data.count %> 件</p>
<p><%= link_to "新規追加", :new_schedule_datum %></p>

<footer>
  <p>本日の日付 <%= Time.zone.today %></p>
</footer>